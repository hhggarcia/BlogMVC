@using BlogMVC.Entity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <span>@User.Identity!.Name</span>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-action="Logout" asp-controller="Users">
                    <button type="submit" class="nav-link btn btn-link text-dark">
                        Logout
                    </button>
                </form>
            </li>
        } else
        {
            <li class="nav-item">
                <a asp-action="Register" asp-controller="Users" class="nav-link dark-text" >Register</a>
            </li>
        <li class="nav-item">
            <a asp-action="Login" asp-controller="Users" class="nav-link dark-text">LogIn</a>
        </li>
        }
</ul>