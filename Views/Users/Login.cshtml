@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@if(ViewData.Keys.Contains("mensaje"))
{
    <p style="color:red"> @ViewData["mensaje"]</p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <input type="hidden" asp-for="UrlRetorno" value="@ViewData["urlRetorno"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" autocomplete="off" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Recuerdame" class="form-check-input" />
                <label asp-for="Recuerdame" class="form-check-label"></label>
            </div>

            <button class="btn-primary btn">Login</button>
            <a asp-action="Register" class="btn btn-success">Nueva Cuenta</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
